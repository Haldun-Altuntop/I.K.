<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".applicationform.ApplicationFormActivity">

    <FrameLayout
        android:id="@+id/activity_form_fragment_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@id/activity_form_bottom_bar_layout"/>

    <RelativeLayout
        android:id="@+id/activity_form_bottom_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="5dp">

        <Button
            android:id="@+id/activity_form_btn_previous"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Önceki"
            android:enabled="false" />

        <Button
            android:id="@+id/activity_form_btn_commit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gönder"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/activity_form_btn_next"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:text="Sonraki" />

    </RelativeLayout>


</RelativeLayout>

