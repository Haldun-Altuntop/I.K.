<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/item_reference_et_name_surname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Adı Soyadı"
            android:autofillHints=""
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/item_reference_et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Telefon Numarası"
            android:autofillHints="phone"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/item_reference_et_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Firma"
            android:autofillHints=""
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/item_reference_et_job"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Meslek"
            android:autofillHints=""
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/item_reference_et_relativity_degree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Yakınlık Derecesi"
            android:autofillHints=""
            android:inputType="textPersonName" />

    </LinearLayout>

</androidx.cardview.widget.CardView>